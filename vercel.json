{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/dist/**",
          "shared/**/*.js",
          "server/.env"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/src/server.ts"
    }
  ]
}