{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/dist/**",
          "shared/**"
        ],
        "scripts": {
          "start": "node server/dist/server/src/server.js"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/dist/server/src/server.js"
    }
  ]
}