{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "server/dist",
        "includeFiles": [
          "server/dist/**/*",
          "shared/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/dist/server/src/server.js"
    }
  ]
}
